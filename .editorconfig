; indicate this is the root of the project
root = true

[*]
indent_style = space
end_of_line = lf
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.c]
indent_size = 4

[*.cpp]
indent_size = 4

[*.h]
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8